@model ETicketApp.Models.Ticket

@{
     ViewData["Title"] = "Ticket Details";
}

<h1>Ticket Details</h1>

<div>
     <h4>Ticket</h4>
     <hr />
     <dl class="row">
          <dt class="col-sm-2">Ticket ID</dt>
          <dd class="col-sm-10">@Model.TicketId</dd>

          <dt class="col-sm-2">Purchase Date</dt>
          <dd class="col-sm-10">@Model.PurchaseDate</dd>

          <dt class="col-sm-2">Status</dt>
          <dd class="col-sm-10">@Model.Status</dd>

          <dt class="col-sm-2">QR Code</dt>
          <dd class="col-sm-10">
               @if (!string.IsNullOrEmpty(Model.QRCodeImage))
               {
                    <img src="@Model.QRCodeImage" alt="QR Code" />
               }
               else
               {
                    <span>No QR Code available</span>
               }
          </dd>

          <dt class="col-sm-2">User</dt>
          <dd class="col-sm-10">@Model.User?.Email</dd>

          <dt class="col-sm-2">Event</dt>
          <dd class="col-sm-10">@Model.Event?.EventName</dd>
     </dl>
</div>
<div>
     <a asp-action="Edit" asp-route-id="@Model.TicketId" class="btn btn-warning">Edit</a> |
     <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@model ETicketApp.Models.Ticket

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
     <h4>Ticket</h4>
     <hr />
     <dl class="row">
          <dt class="col-sm-2">QrText</dt>
          <dd class="col-sm-10">@Model.QrText</dd>

          <dt class="col-sm-2">QR Code Image</dt>
          <dd class="col-sm-10">
               @if (!string.IsNullOrEmpty(Model.QRCodeImage))
               {
                    <img src="@Model.QRCodeImage" alt="QR Code" />
               }
               else
               {
                    <span>No QR Code available</span>
               }
          </dd>

          <dt class="col-sm-2">Status</dt>
          <dd class="col-sm-10">@Model.Status</dd>
     </dl>

     <form asp-action="Delete">
          <input type="hidden" asp-for="TicketId" />
          <input type="submit" value="Delete" class="btn btn-danger" />
          <a asp-action="Index" class="btn btn-secondary">Back to List</a>
     </form>
</div>
